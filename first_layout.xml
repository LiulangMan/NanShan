<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/timg"

    >
    <RelativeLayout
        android:id="@+id/login_view"
        android:layout_width="400dp"
        android:layout_height="800dp"
        android:layout_centerInParent="true"
        >

    <TextView
    android:id="@+id/text_view1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="南     山     吟"
    android:textSize="40sp"

    android:layout_centerHorizontal="true"

    />
    <TextView
        android:id="@+id/text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"
        android:layout_below="@id/text_view1"
        android:text="古中，一曲烟火的迷离"
        android:textColor="#F213"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/text_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"
        android:layout_below="@id/text_view1"
        android:layout_toRightOf="@id/text_view2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:text="今生，一段诗意的人生"
        android:textColor="#F213"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/login_edit_account"
        android:layout_width="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_view3"
        android:layout_below="@id/text_view1"
        android:hint="      请输入用户名"
        android:drawableLeft="@mipmap/ic_login_account"
        />

    <EditText
        android:id="@+id/login_edit_pwd"
        android:layout_width="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_view3"
        android:layout_below="@id/text_view1"
        android:hint="      请输入密码"
        android:drawableLeft="@mipmap/ic_login_password"
        />
    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_view3"
        android:layout_below="@id/text_view1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:text="点此登陆"
        android:background="#00000000"
        />
    <Button
        android:id="@+id/login_btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_view3"
        android:layout_below="@id/text_view1"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="250dp"
        android:text="点此注册"
        android:background="#00000000"
        />
    <TextView
        android:id="@+id/login_text_change_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_view3"
        android:layout_below="@id/text_view1"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="207dp"
        android:text="修改密码"
        android:background="#00000000"
        />
    <CheckBox
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="记住密码"
        android:id="@+id/Login_Remember"
        android:layout_below="@+id/login_edit_pwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/login_btn_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_view3"
        android:layout_below="@id/text_view1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="300dp"
        android:text="点此注销"
        android:background="#00000000"
        />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:id="@+id/logo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="false"
            android:background="#ffffff" />
        <RelativeLayout
        android:id="@+id/login_success_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15.0px"
        android:layout_marginRight="15.0px"
        android:layout_marginTop="62.0px"
        android:background="#ff3f3f3f"
        android:paddingBottom="10.0px"
        android:paddingTop="21.0px"
        android:visibility="gone" >

        <TextView
            android:id="@+id/login_success_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ff3f3f3f"
            android:textSize="20.0dip" />
    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>