<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/timg"
    >
<TextView
    android:id="@+id/text_view_second_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="30dp"
    android:text="注册栏"
    android:layout_centerHorizontal="true"
    android:textColor="#ffaaad"
    />
    <EditText
        android:id="@+id/ic_menu_myplaces"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_second_1"
        android:hint="创建用户："
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@mipmap/ic_register_nickname"
        />
    <EditText
        android:id="@+id/resetpwd_edit_pwd_old"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_second_1"
        android:hint="设置密码："
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@mipmap/ic_register_pwd"
        />
    <EditText
        android:id="@+id/resetpwd_edit_pwd_new"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_second_1"
        android:hint="确认密码："
        android:layout_marginTop="160dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@mipmap/ic_register_pwd"
        />
    <EditText
        android:id="@+id/edit_text_second_3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_second_1"
        android:hint="性别："
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@mipmap/ic_register_gender"
        />
    <EditText
        android:id="@+id/edit_text_second_4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_second_1"
        android:hint="电话："
        android:layout_marginTop="280dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@mipmap/ic_register_phone"
        />
    <Button
        android:id="@+id/register_btn_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成注册"
        android:background="#00000000"
        android:layout_below="@id/text_view_second_1"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="160dp"

        />
    <Button
        android:id="@+id/register_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消注册"
        android:background="#00000000"
        android:layout_below="@id/text_view_second_1"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="160dp"

        />

</RelativeLayout>